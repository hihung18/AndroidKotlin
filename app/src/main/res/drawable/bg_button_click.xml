<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button khi được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Định dạng nền khi Button được nhấn -->
            <solid android:color="@color/gray" />
            <!-- Các thuộc tính khác như góc bo, đường viền... -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" />
            <stroke android:width="1dp" android:color="#00000000" /> <!-- Đặt độ rộng là 0dp để loại bỏ đường viền -->
            <corners android:radius="10dp" /> <!-- Góc bo, bạn có thể điều chỉnh giá trị theo ý muốn -->
        </shape>
    </item>
</selector>