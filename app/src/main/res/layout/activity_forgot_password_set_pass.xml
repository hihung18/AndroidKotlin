<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activity.ForgotPassword_SetPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnPreviousfp3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:src="@drawable/previous" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:textSize="30dp"
                android:layout_marginTop="45sp"
                android:layout_marginLeft="10sp"
                android:textColor="#EC4B0C"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your new password"
                android:layout_marginLeft="10sp"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/txtEnterNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Enter your new password"
                android:drawableRight="@drawable/show_password"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10sp"
                android:padding="15dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange_hint"
                android:background="@drawable/custom_input"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your new password"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/txtEnterReNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange_hint"
                android:inputType="textPassword"
                android:hint="Enter your new password"
                android:drawableRight="@drawable/show_password"
                android:background="@drawable/custom_input"
                android:padding="15dp"
                android:layout_marginLeft="10sp"
                android:drawablePadding="10dp"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEnterNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_button"
                android:text="Complete"
                android:textSize="18sp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/orange" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>