<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/bg_list_item"
    >
    <TextView
        android:id="@+id/tvSTT_BT_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_marginTop="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNameBT_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:gravity="left"
                android:text="Chuyen cong tac Ha Noi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvstatusBT_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:background="@color/orange_hint"
                android:gravity="center"
                android:padding="2dp"
                android:text="PREPARING"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDateBT_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/11/2023"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
</LinearLayout>