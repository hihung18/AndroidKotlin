<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@drawable/bg_list_item"
    >
    <TextView
        android:id="@+id/tvSTT_Task_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNameTask_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhiem vu 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/tvRefused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refused"
                android:background="@drawable/bg_button_click"
                android:textSize="16sp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTask_detail_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khao sat, viet bao cao tong the ve cong ty"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUserTask_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Hung"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tvDateTask_cre_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="11/11/2023"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:gravity="right"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfirmTask"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_click"
                android:textStyle="bold"
                android:text="Confirm"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btnRefuseTask"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Refuse"
                android:background="@drawable/bg_button_click"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnCheckinTask"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Checkin"
                android:background="@drawable/bg_button_click"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnCompleteTask"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Complete"
                android:background="@drawable/bg_button_click"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>